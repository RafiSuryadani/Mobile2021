                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kelas:                               BL"
                android:textSize="10dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referensi:"
                android:textSize="40dp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="https://stackoverflow.com/questions/30777698/android-footer-scrolls-off-screen-when-used-in-coordinatorlayout"
                android:textSize="10dp"
                android:textColor="@color/purple_700"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="https://stackoverflow.com/questions/2115758/how-do-i-display-an-alert-dialog-on-android"
                android:textSize="10dp"
                android:textColor="@color/purple_700"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="https://stackoverflow.com/questions/38031622/uncalled-oncreateoptionsmenu-with-custom-toolbar"
                android:textSize="10dp"
                android:textColor="@color/purple_700"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="https://stackoverflow.com/questions/23265502/getting-album-art-for-music-player-android"
                android:textSize="10dp"
                android:textColor="@color/purple_700"/>
