                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="https://www.youtube.com/watch?v=kf2fxYLOiSo&amp;ab_channel=TihomirRAdeff"
                android:textSize="10dp"
                android:textColor="@color/purple_700"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="https://github.com/bikashthapa01/android-studio-music-player/blob/master/app/src/main/java/com/example/letsplay/Player.java"
                android:textSize="10dp"
                android:textColor="@color/purple_700"/>
